<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:background="#FFC0CB">
            
           <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="#F49AC2">
           <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button" 
            android:padding="10sp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold" 
            android:typeface="sans"
            android:text="Back"
            android:layout_alignParentTop="true"/>
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:typeface="sans"
            android:textColor="#ffffff"
            android:text="Instructions"/>
            </RelativeLayout>

            <View 
            android:layout_height="12dp"
            android:layout_width="fill_parent"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:textColor="#702963"
            android:textStyle="bold"
            android:textSize="20sp"
            android:typeface="sans"
            android:text="Learn alphabets"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:textColor="#a42cff"
            android:textSize="18sp"
            android:typeface="serif"
            android:text="It shows the tiles  with Capital letters and small letters .It is a non interactive demo.."/>

           <View 
            android:layout_height="12dp"
            android:layout_width="fill_parent"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:textColor="#702963"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Match alphabets and numbers"/>
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:textColor="#a42cff"
            android:textSize="18sp"
            android:text="There are different coloured tiles showing Upper case Alphabets, Lower case alphabets and numbers. The user has to match the alphabets with their respective small alphabets  and match the same number tiles. Keep doing it until the screen is cleared of all the tiles,then proceed to the next screen"/>

</LinearLayout>
